---
import { Icon } from 'astro-icon/components'

const services = [
  {
    title: 'Minor Project',
    icon: 'minor-project'
  },
  {
    title: 'Major Project',
    icon: 'major-project'
  },
  {
    title: 'Term Paper',
    icon: 'term-paper'
  },
  {
    title: 'Certification Courses',
    icon: 'certificate'
  }
]
---

<section
  id="services"
  class="grid grid-cols-2 md:grid-cols-4 py-4 md:py-14 px-6 md:px-16 lg:px-36 gap-6 sm:gap-8 md:gap-12 lg:gap-14 xl:gap-20 my-8 md:my-0">
  {
    services.map(service => (
      <div class="shadow-md hover:shadow-lg hover:border-secondary/30  transition-all duration-500 border-[1px] border-secondary/20 py-4 px-6 text-center rounded-xl items-center flex flex-col gap-4">
        <Icon name={service.icon} class="w-12 h-12 text-primary" />
        <h2 class="text-lg md:text-xl font-medium md:font-semibold font-main">
          {service.title}
        </h2>
      </div>
    ))
  }
</section>
