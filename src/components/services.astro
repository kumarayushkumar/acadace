---
import { Icon } from 'astro-icon/components'

const services = [
  {
    title: 'Minor Project',
    icon: 'minor-project'
  },
  {
    title: 'Major Project',
    icon: 'major-project'
  },
  {
    title: 'Term Paper',
    icon: 'term-paper'
  },
  {
    title: 'Skill Certificate',
    icon: 'certificate'
  }
]
---

<section
  id="services"
  class="py-4 md:py-14 px-6 md:px-16 lg:px-36 my-6 md:my-0">
  <div class="text-2xl md:text-3xl font-main">Services</div>
  <div
    class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 lg:gap-14 xl:gap-20 mt-6 md:mt-10">
    {
      services.map(service => (
        <div class="shadow-md hover:shadow-lg hover:border-secondary/30 transition-all duration-500 border-[1px] border-secondary/20 py-4 px-6 text-center rounded-xl items-center flex flex-col gap-4">
          <Icon name={service.icon} class="w-12 h-12 text-primary" />
          <h2 class="text-base sm:text-lg md:text-xl font-medium font-main leading-5 md:leading-6">
            {service.title}
          </h2>
        </div>
      ))
    }
  </div>
</section>
