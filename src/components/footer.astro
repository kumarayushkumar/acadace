---
import { CONST } from '../utils/constants'
import { Icon } from 'astro-icon/components'

const socialMedia = [
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/wearegrowigh/',
    icon: 'instagram'
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/WeareGrowigh',
    icon: 'x-twitter'
  },
  {
    name: 'WhatsApp',
    url: 'https://api.whatsapp.com/send/?phone=916263424118&text&app_absent=0',
    icon: 'whatsapp'
  }
]
---

<footer class="bg-[#FEFBEE] text-zinc-500">
  <div class="grid md:grid-cols-2 gap-6 md:gap-14">
    <div class="flex flex-col gap-6 md:gap-14">
      <div>
        <h3>AcadAce</h3>
        <p>{CONST.slogan}</p>
      </div>
    </div>

    <div></div>
  </div>

  <div class="mt-8 grid md:grid-cols-2 px-4 md:px-14 lg:px-16 items-center">
    <div class="text-center md:text-start order-2 md:order-1 mt-4 md:mt-0">
      <p>&copy; {new Date().getFullYear()} AcadAce. All rights reserved.</p>
    </div>

    <div
      class="social-media flex justify-center md:justify-end gap-10 sm:gap-12 md:gap-14 lg:gap-12 text-whiteout order-1 md:order-2">
      {
        socialMedia.map((social, index) => (
          <a
            href={social.url}
            target="_blank"
            aria-label={`Visit our ${social.name} page`}
            rel="noreferrer"
            class="transition-all duration-300 ease-in-out hover:scale-105 text-2xl text-zinc-800">
            <Icon name={social.icon} />
          </a>
        ))
      }
    </div>
  </div>
</footer>

<style is:inline>
  /* .social-media > a {
    font-size: 1.75rem;
  } */
</style>
