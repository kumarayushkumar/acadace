---
import Layout from '../layout/layout.astro'
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import Hero from '../components/hero.astro'
import Services from '../components/services.astro'
import Domain from '../components/domains.astro'
import Relax from '../components/relax.astro'
import WhyUs from '../components/why-us.astro'
---

<Layout title="AcadAce">
  <Header />
  <Hero />
  <Services />
  <Domain />
  <Relax />
  <WhyUs />
  <Footer />
</Layout>

<style is:global>
  @font-face {
    font-family: 'Helvetica-rounded';
    src: url('/fonts/Helvetica-rounded.woff') format('woff');
    font-display: swap;
  }

  @font-face {
    font-family: 'Helvetica';
    src: url('/fonts/Helvetica.woff') format('woff');
    font-display: swap;
  }

  @font-face {
    font-family: 'Georgia';
    src: url('/fonts/Georgia.ttf') format('ttf');
    font-display: swap;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    color: #212b2a;
  }
</style>
